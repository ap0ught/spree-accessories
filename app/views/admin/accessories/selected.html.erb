<%= render :partial => 'admin/shared/product_sub_menu' %>

<%= render :partial => 'admin/shared/product_tabs', :locals => {:current => t("accessories") } %>
<div id="selected-accessories">
  <%= render :partial => "accessories_table" %>
</div>

<table>
  <tr>
    <td><b>Ajouter une cat√©gorie :</b></td>
    <td><input id="searchtext_taxon" size="25"></td>
  </tr>
  <tr>
    <td><b>Ajouter un produit :</b></td>
    <td><input id="searchtext_product" size="25"></td>
  </tr>
</table>
<div id="searching" style="display:none">
  <%= t('searching') %> &nbsp; <%= image_tag "spinner.gif" %>  
</div>
<%= observe_field(:searchtext_product,
                  :frequency => 0.75,
                  :update => :search_hits,
                  :loading => "Element.show('searching')",
                  :complete => "Element.hide('searching')",
                  :url => available_admin_product_accessories_url(@product,:type=>"product"),
                  :with => "'q=' + value") %>
<%= observe_field(:searchtext_taxon,
                  :frequency => 0.75,
                  :update => :search_hits,
                  :loading => "Element.show('searching')",
                  :complete => "Element.hide('searching')",
                  :url => available_admin_product_accessories_url(@product,:type=>"taxon"),
                  :with => "'q=' + value") %> 
<br/>                 
<div id="search_hits"></div>
